configfile: "config.yaml"


rule all:
    input:
        expand("meshes/ligne_{id}.txt", id=config["lignes"])




## Multi-view reconstruction and Meshing 
rule reconstruction:
    params:
        ligne=config["lignes"]
    output:
        expand("meshes/ligne_{id}.txt", id=config["lignes"])
    log:
        expand("log/ligne_{id}.log")
    shell:
        '''python2 reconstruct.py -r {wildcards.params.ligne} > {output} 2> {log}'''


